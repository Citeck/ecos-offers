                        ],
                        "customDefaultValue": "value = \"\";",
                        "calculateValue": "const { asyncDataForGrade } = data || {};\nconst { records } = asyncDataForGrade || {};\n\nif (Array.isArray(records) && records > 0) {\n  value = records[0].id;\n}",
                        "allowCalculateOverride": true,
                        "optionalWhenDisabled": false,
