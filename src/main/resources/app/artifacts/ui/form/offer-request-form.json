      {
        "label": {
          "ru": "Columns"
        },
        "key": "columns2",
        "columns": [
          {
            "components": [
              {
                "label": "getHeadGroup",
                "source": {
                  "type": "recordsQuery",
                  "recordsQuery": {
                    "query": "const { requestSubdivision } = data || {};\n\nvalue = {\n      sourceId: 'emodel/authority-group',\n      query: {\n        \"t\": \"and\",\n        \"val\": [\n          {\"t\": \"eq\", \"att\": \"authorityGroups\", \"val\": requestSubdivision},\n          {\"t\": \"contains\", \"att\": \"__ext_id\", \"val\": \"head\"}\n        ]\n      },\n      language: 'predicate',\n      consistency: 'EVENTUAL'\n};\n",
                    "attributes": {},
                    "isSingle": false
                  },
                  "forceLoad": false
                },
                "update": {
                  "type": "any-change"
                },
                "refreshOn": [
                  {
                    "label": "requestSubdivision",
                    "value": "requestSubdivision"
                  }
                ],
                "key": "getHeadGroup",
                "type": "asyncData",
                "input": true
              }
            ],
            "md": 4,
            "type": "column",
            "input": false,
            "key": "column",
            "index": 0
          },
          {
            "md": 4,
            "type": "column",
            "input": false,
            "key": "column",
            "index": 1,
            "components": [
              {
                "label": "getManager",
                "source": {
                  "type": "recordsQuery",
                  "recordsQuery": {
                    "query": "const { getHeadGroup } = data || {};\nconst { records } = getHeadGroup || {};\n\nif (Array.isArray(records) && records.length !== 0) {\n    value =  {\n      sourceId: 'emodel/person',\n      query: {\n          \"t\": \"and\",\n          \"val\": [\n              {\"t\": \"eq\", \"att\": \"authorityGroups\", \"val\": records[0]}\n          ]\n          \n     },\n      language: 'predicate',\n      consistency: 'EVENTUAL'\n   }\n  }\n  \n\n",
                    "attributes": {},
                    "isSingle": false
                  },
                  "forceLoad": false
                },
                "update": {
                  "type": "any-change"
                },
                "refreshOn": [
                  {
                    "label": "getHeadGroup",
                    "value": "getHeadGroup"
                  }
                ],
                "key": "getManager",
                "type": "asyncData",
                "input": true
              }
            ]
          },
          {
            "md": 4,
            "type": "column",
            "input": false,
            "key": "column",
            "index": 2,
            "components": [
              {
                "label": "AsyncData",
                "source": {
                  "type": "recordsQuery",
                  "recordsQuery": {
                    "query": "const {requestPosition = null} = data;\r\nvar value = {\r\n    query: {t: 'and', val: [\r\n        {t: 'eq', att: '_type', val: 'emodel/type@offer-grade-type'},\r\n        {t: \"eq\", att: \"gradesSimpleRoleTypeAssoc\", val: requestPosition},\r\n    ]},\r\n    language: 'predicate'\r\n}",
                    "attributes": {},
                    "isSingle": false
                  },
                  "forceLoad": false
                },
                "update": {
                  "type": "disabled"
                },
                "refreshOn": [
                  {
                    "label": "requestPosition",
                    "value": "requestPosition"
                  }
                ],
                "key": "asyncDataForGrade",
                "type": "asyncData",
                "input": true
              }
