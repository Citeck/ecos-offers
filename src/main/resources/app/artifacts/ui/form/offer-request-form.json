                        "key": "requestCandidates",
                        "multiple": true,
                        "modalTitle": "",
                        "journalId": "offer-candidate-journal",
                        "queryData": "",
                        "computed": {
                          "valueDisplayName": "disp = value.load({\n  firstName: 'candidateFirstName',\n  lastName: 'candidateLastName',\n  status: '_status'\n}).then(res => `${res.firstName} ${res.lastName}, ${res.status}`);"
                        },
                        "presetFilterPredicatesJs": "const { requestCity } = data || {};\r\nconst { requestPosition } = data || {};\r\nconst { requestExperience } = data || {};\r\nconst { requestGrade } = data || {};\r\n\r\nlet conditions = [];\r\n\r\nif (!!requestGrade) {\r\n    conditions.push({\r\n        \"t\": \"contains\",\r\n        \"att\": \"candidateTechInterviewGrade\",\r\n        \"val\": requestGrade\r\n    });\r\n}\r\n\r\nif (!!requestCity) {\r\n    conditions.push({\r\n        \"t\": \"eq\",\r\n        \"att\": \"candidateCityAssoc\",\r\n        \"val\": requestCity\r\n    });\r\n}\r\n\r\nif (!!requestPosition) {\r\n    conditions.push({\r\n        \"t\": \"eq\",\r\n        \"att\": \"candidatePosition\",\r\n        \"val\": requestPosition\r\n    });\r\n}\r\n\r\nif (!!requestExperience) {\r\n    conditions.push({\r\n        \"t\": \"eq\",\r\n        \"att\": \"candidateExperienceAssoc\",\r\n        \"val\": requestExperience\r\n    });\r\n}\r\n\r\nif (conditions.length > 0) {\r\n    value = conditions;\r\n}\r\n",
                        "defaultValue": [],
                        "refreshOn": [
                          "requestPosition",
                          "requestCity",
                          "requestExperience",
                          "requestGrade"
                        ],
